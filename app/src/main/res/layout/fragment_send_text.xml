<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.autism.mindpower.feeling.SendTextFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:minHeight="512dp"
        android:minWidth="256dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_emotion_placeholder"
                android:textSize="48sp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivEmotion"
                android:src="@android:drawable/stat_sys_warning"
                android:maxHeight="192dp"
                android:maxWidth="192dp"
                android:scaleType="centerInside"
                android:cropToPadding="false"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/tvWord"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvTellText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_tell_person"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/to_phone_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:visibility="gone" />


        <Button android:id="@+id/send_sms_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_send"
            android:clickable="false"
            android:visibility="gone" />

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lvContacts"
            android:minHeight="@dimen/notification_large_icon_height"
            android:minWidth="@dimen/notification_large_icon_width" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_sms_button"
            android:text="@string/button_send"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>


</RelativeLayout>
